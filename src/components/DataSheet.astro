---
import "animate.css";
---

<section class="py-6 pt-16 flex flex-col items-center overflow-hidden">
  <div class="max-w-screen-2xl lg:w-11/12 flex flex-col items-center">
    <div
      class="w-11/12 py-6 flex lg:flex-row flex-col justify-between items-center"
    >
      <div class="lg:w-1/2 w-11/12 flex flex-col items-center">
        <h3 class="text-md lg:text-xl my-10">FICHA TÉCNICA</h3>
        <p class="text-7xl text-center font-extrabold">EU5</p>
        <a
          target="_blank"
          href="./ft.pdf"
          class="w-8/12 lg:w-1/2 mt-10 border-2 text-center border-black rounded-full p-3"
          >DESCARGAR</a
        >
      </div>
      <div class="lg:w-1/2 w-11/12">
        <img
          id="red-car"
          class="animate__animated animate__fadeInRight w-full hidden"
          src="./red-car_1.webp"
          alt=""
        /><img
          id="white-car"
          class="animate__animated animate__fadeInRight w-full block"
          src="./white-car.webp"
          alt=""
        /><img
          id="black-car"
          class="animate__animated animate__fadeInRight w-full hidden"
          src="./black-car.webp"
          alt=""
        />
        <div class="flex flex-row justify-center items-center gap-2">
          <div id="white" class="w-10 h-10 bg-gray-100 rounded-full cursor-pointer"></div>
          <div id="red" class="w-10 h-10 bg-red-600 rounded-full cursor-pointer"></div>
          <div id="black" class="w-10 h-10 bg-black rounded-full cursor-pointer"></div>
        </div>
        <p class="text-center mt-6 text-xl">COLORES DISPONIBLES</p>
      </div>
    </div>
    <div
      class="flex w-full lg:justify-between flex-col lg:flex-row items-center"
    >
      <div
        class="lg:w-1/3 h-full w-11/12 flex flex-col justify-between items-center p-6 text-center"
      >
        <h3
          class="lg:text-4xl font-bold lg:h-20 py lg:py-0-2 text-xl text-center items-center flex"
        >
          COMODIDAD
        </h3>
        <span class="lg:h-10 text-md py-2 lg:py-0 text-center flex items-center"
          >AUTOMOVIL MÁS AMPLIO DE SU CATEGORIA</span
        >
        <img
          src="./1.webp"
          alt="image1"
          class="h-60 py-2 lg:py-0 w-11/12 object-cover"
        />

        <ul
          style="list-style: circle; text-align:start;"
          class="py-5 h-60 ml-[10%] text-xl"
        >
          <li>Distancia entre ejes extra larga de 2670 MM</li>
          <li>Asiento del conductor con ajuste manual de 6 posiciones</li>
          <li>Asiento trasero con reclinación integral</li>
          <li>Baúl de un volumen de 430 L</li>
        </ul>
      </div>

      <div
        class="lg:w-1/3 h-full w-11/12 flex flex-col items-center justify-between p-6 text-center"
      >
        <h3
          class="lg:text-4xl font-bold lg:h-20 py lg:py-0-2 text-xl text-center items-center flex"
        >
          DISEÑO Y TECNOLOGÍA
        </h3>
        <span class="lg:h-10 text-md py-2 lg:py-0 text-center flex items-center"
          >DISEÑO INTERIOR ATRACTIVO E INTUITIVO</span
        >
        <img
          src="./2.webp"
          alt="image1"
          class="h-60 py-2 lg:py-0 w-11/12 object-cover"
        />

        <ul
          style="list-style: circle; text-align:start;"
          class="lg:h-60 w-11/12 py-5 ml-[10%] list-inside text-xl"
        >
          <li>Pantalla led de 9¨</li>
          <li>Volante multifunción</li>
          <li>conectiviad con smartphones</li>
          <li>Climatizador automatico</li>
        </ul>
      </div>

      <div
        class="lg:w-1/3 h-full w-11/12 flex flex-col items-center justify-between p-6 text-center"
      >
        <h3
          class="lg:h-20 py-2 text-xl text-center lg:py-0 flex items-center lg:text-4xl font-bold"
        >
          COMODIDAD
        </h3>
        <span class="lg:h-10 text-md py-2 lg:py-0 text-center flex items-center"
          >AUTOMOVIL MÁS AMPLIO DE SU CATEGORIA</span
        >
        <img
          src="./3.webp"
          alt="image1"
          class="h-60 py-2 lg:py-0 w-11/12 object-cover"
        />

        <ul
          style="list-style: circle; text-align:start;"
          class="lg:h-60 w-11/12 py-5 ml-[10%] list-inside text-xl"
        >
          <li>Distancia entre ejes extra larga de 2670 MM</li>
          <li>Asiento del conductor con ajuste manual de 6 posiciones</li>
          <li>Asiento trasero con reclinación integral</li>
          <li>Baúl de un volumen de 430 L</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<script>
const colorButtons = document.querySelectorAll("#white, #red, #black");
const cars: { [key: string]: HTMLElement | null } = {
  white: document.getElementById("white-car"),
  red: document.getElementById("red-car"),
  black: document.getElementById("black-car")
};

colorButtons.forEach(button => {
  button.addEventListener("click", () => {
    // Oculta todos los coches
    Object.values(cars).forEach(car => {
      if (car) {
        car.style.display = "none";
      }
    });
    
    // Muestra el coche correspondiente al botón presionado
    const selectedColor = button.id;
    if (cars[selectedColor]) {
      cars[selectedColor].style.display = "block";
    }
  });
});
</script>
